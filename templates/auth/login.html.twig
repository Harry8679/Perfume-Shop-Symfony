{% extends 'base.html.twig' %}

{% block title %}
	{{ 'login_or_register'|trans }}
{% endblock %}

{% block body %}
	<div class="main-content main-content-login">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcrumb-trail breadcrumbs">
						<ul class="trail-items breadcrumb">
							<li class="trail-item trail-begin">
								<a href="{{ path('app_homepage') }}">{{ 'home'|trans }}</a>
							</li>
							<li class="trail-item trail-end active">
								{{ 'authentication'|trans }}
							</li>
						</ul>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="content-area col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<div class="site-main">
						<h3 class="custom_blog_title">{{ 'authentication'|trans }}</h3>
						<div class="customer_login">
							<div class="row">
								<div class="col-lg-6 col-md-6 col-sm-12">
									<div class="login-item">
										<h5 class="title-login">{{ 'login_your_account'|trans }}</h5>
										{% if error %}
											<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
										{% endif %}
										<form method="post" action="{{ path('app_login_register') }}" class="login">
											<input
											type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
											<!-- Champ d'identifiant -->
											<p class="form-row form-row-wide">
												<label class="text">{{ 'form.email_label'|trans }}</label>
												<input title="username" type="text" name="_username" class="input-text" value="{{ last_username ?? '' }}">
											</p>
											<!-- Champ de mot de passe -->
											<p class="form-row form-row-wide">
												<label class="text">{{ 'form.password_label'|trans }}</label>
												<input title="password" type="password" name="_password" class="input-text">
											</p>
											<!-- Case Ã  cocher pour "Se souvenir de moi" -->
											<p class="lost_password">
												<span class="inline">
													<input type="checkbox" id="cb1" name="_remember_me">
													<label for="cb1" class="label-text">{{ 'form.remember_me'|trans }}</label>
												</span>
												<a href="#" class="forgot-pw">{{ 'form.forgot_password'|trans }}</a>
											</p>
											<!-- Bouton de soumission -->
											<p
												class="form-row">
												{# <input type="submit" class="button-submit" value="login"> #}
												<input type="submit" class="button-submit" value="{{ 'login'|trans }}">
											</p>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

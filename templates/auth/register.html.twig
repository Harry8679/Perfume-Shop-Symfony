{% extends 'base.html.twig' %}

{% block title %}
	{{ 'login_or_register'|trans }}
{% endblock %}

{% block body %}
	<div class="main-content main-content-login">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcrumb-trail breadcrumbs">
						<ul class="trail-items breadcrumb">
							<li class="trail-item trail-begin">
								<a href="{{ path('app_homepage') }}">{{ 'home'|trans }}</a>
							</li>
							<li class="trail-item trail-end active">
								{{ 'authentication'|trans }}
							</li>
						</ul>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="content-area col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<div class="site-main">
						<h3 class="custom_blog_title">{{ 'authentication'|trans }}</h3>
						<div class="customer_login">
							<div class="row">
								<div class="col-lg-6 col-md-6 col-sm-12">
									<div class="login-item">
										<h5 class="title-login">{{ 'register_now'|trans }}</h5>
										{% form_theme formRegister 'form/form_errors.html.twig' %}
										{{ form_start(formRegister, {'attr': {'data-turbo': 'false', 'class': 'register'}}) }}
										{{ form_row(formRegister.firstName) }}
										{{ form_row(formRegister.lastName) }}
										{{ form_row(formRegister.email) }}
										{{ form_row(formRegister.plainPassword) }}
										{{ form_row(formRegister.submit) }}
										{{ form_end(formRegister) }}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

									</div>
								</div>
								<div class="col-lg-6 col-md-6 col-sm-12">
									<div class="login-item">
										<h5 class="title-login">{{ 'register_now'|trans }}</h5>
										{% form_theme formRegister 'form/form_errors.html.twig' %}
										{{ form_start(formRegister, {'attr': {'data-turbo': 'false', 'class': 'register'}}) }}
										{{ form_row(formRegister.firstName) }}
